#!/bin/bash


for i in {100..2000..100} ##{x1..x2..x3} iterates from x1 to x2 in steps of x3
do

if [ -e ./pot${i}.dat ]
   then
      rm ./pot${i}.dat
      echo "removed previos ./pot${i}.dat"
fi

	./main -10 10.2 0.2 3 $i 2 
	mv pot.dat pot${i}.dat # update input file from main possibly
        ./merge.bsh pot${i}.dat analytical.dat
	rm pot${i}.dat
done

 exit 0


